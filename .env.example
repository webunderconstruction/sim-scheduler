# Serial Configuration
SERIAL_PORT=/dev/ttyUSB2
SERIAL_BAUD_RATE=115200
SERIAL_TIMEOUT=60000

# SIM Configuration
SIM_PIN=1234

# Phone Numbers
ADMIN_PH=+1234567890
HEALTH_CHECK_PH=+1234567890

# Scheduling (cron expressions)
# Duty officer update: Daily at 7 PM
DUTY_UPDATE_CRON=0 19 * * *
# SMS check: Every 5 minutes
SMS_CHECK_CRON=*/5 * * * *
# Health check: 8 AM and 8 PM daily
HEALTH_CHECK_CRON=0 8,20 * * *

# Dev Mode / Remote Tunnel
NODE_ENV=production
ENABLE_REMOTE_TUNNEL=false
TUNNEL_PORT=3000
TUNNEL_HOST=localhost

# Logging
LOG_LEVEL=info
LOG_FILE=

# Duty Officer Configuration
DUTY_OFFICER_FILE=./brigadeOfficers.json
